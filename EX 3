#include <iostream>

using namespace std;

int pn (float n){
 if (n > 0){
  return 1;
 }else{
  if (n < 0){
   return -1;
  }else{
   return 0;
  }
 }
}

int main()
{
    int y;
    cin >> y;
    cout << pn(y);
    return 0;       
}

Exercicio 4

#include <iostream>
#include <cmath>

using namespace std;

int qp(int n){
 if(n < 0 ){
  return 0;
 }
 float rq = sqrt(n); 
 if(rq - int(rq) == 0){
  return 1;
 }
 return 0;
}

int main()
{
   int v;
   cin >> v;
   cout << qp(v);
    return 0;       
}

//exercicio 5

#include <iostream>
#include <cmath>

using namespace std;

float vEsfera(float R){
 float V = 4.0/3.0 * M_PI * pow(R,3);
 return V;
}

int main()
{
 int b;
 cin >> b;
    cout << vEsfera(b);
    return 0;       
}
